<%- include("partials/header") %> 

<div class="container">
    <div class="row">
        <div class="col-md-12">
            <h1 class="text-center">Create a new campground</h1>
            <div class="mt-3" style="width: 30%; margin: 0 auto;">
                <form action="/campgrounds" method="post">
                    <div class="form-group">
                        <input class="form-control" type="text" name="name" placeholder="name" id="">
                    </div>
                    <div class="form-group">
                        <input class="form-control" type="text" name="image" placeholder="image url" id="">
                    </div>
                    <div class="form-group">
                        <input class="form-control" type="text" name="description" placeholder="description" id="">
                    </div>
                    <button class="btn btn-large btn-primary btn-block" type="submit">Submit</button>
                </form>
                <a href="/campgrounds">Go Back</a>   
            </div>
        </div>
    </div> 
</div>

