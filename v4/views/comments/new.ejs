<%- include("../partials/header") %> 

<div class="container">
    <div class="row">
        <div class="col-md-12">
            <h1 class="text-center">add new comment to <%= campground.name %></h1>
            <div class="mt-3" style="width: 30%; margin: 0 auto;">
                <form action="/campgrounds/<%= campground._id %>/comments" method="post">
                    <div class="form-group">
                        <input class="form-control" type="text" name="comment[text]" placeholder="text" id="">
                    </div>
                    <div class="form-group">
                        <input class="form-control" type="text" name="comment[author]" placeholder="author" id="">
                    </div>
                    <button class="btn btn-large btn-primary btn-block" type="submit">Submit</button>
                </form>
                <a href="/campgrounds/<%= campground._id %>">Go Back</a>   
            </div>
        </div>
    </div> 
</div>


<%- include("../partials/footer") %> 